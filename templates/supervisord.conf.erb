[program:<%= fetch(:supervisor_program_name) %>]
directory=<%= release_path %>
command=<%= File.join(release_path, 'bin/run.sh') %>
<% if fetch(:supervisor_user) -%>
user=<%= fetch(:supervisor_user) %>
<% end -%>
autorestart=true
stdout_logfile=/var/log/supervisor/<%= fetch(:supervisor_program_name).downcase%>-supervisord.log
redirect_stderr=true
